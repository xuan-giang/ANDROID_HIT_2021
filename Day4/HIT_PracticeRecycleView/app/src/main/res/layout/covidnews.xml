<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_margin="10dp"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <ImageView
            android:layout_marginLeft="10dp"
            android:id="@+id/nationalFlag"
            android:layout_width="40dp"
            android:layout_height="40dp"/>
        <TextView
            android:textColor="#258bd6"
            android:textStyle="bold"
            android:textSize="18sp"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/nationalFlag"
            android:id="@+id/nameOfCountry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:textColor="@color/content_text_color"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_below="@+id/nameOfCountry"
            android:layout_toRightOf="@+id/nationalFlag"
            android:id="@+id/numberConfirmed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/content_text_color"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/nameOfCountry"
            android:layout_toRightOf="@+id/numberConfirmed"
            android:id="@+id/numberDeaths"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="@color/content_text_color"
            android:textSize="14sp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            android:layout_below="@+id/nameOfCountry"
            android:layout_toRightOf="@+id/numberDeaths"
            android:id="@+id/numberRecovered"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</RelativeLayout>